<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:global="clr-namespace:"
        xmlns:vm="clr-namespace:CatalogoAvalonia.Views"
        x:DataType="vm:MainVM"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="CatalogoAvalonia.Views.MenuPrincipal"
        Title="Menu Principal" Width="800" Height="500"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título o encabezado -->
        <TextBlock Text="Menú Principal" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>

        <!-- Controles -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <Button Content="Ver Campeones" Width="200" Height="50" HorizontalAlignment="Center" Command="{Binding abrirVentanaVer}" />
            <Button Content="Añadir Campeón" Width="200" Height="50" HorizontalAlignment="Center" Command="{Binding abrirVentanaAnadir}" />
            <Button Content="Guardar Datos" Width="200" Height="50" HorizontalAlignment="Center" Command="{Binding guardarCampeones}" />
        </StackPanel>

    </Grid>
</Window>